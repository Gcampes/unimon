<!DOCTYPE html>
<html class="no-js">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Unimon</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="css/core.css">    </head>
    <body>

        <!--[if lt IE 8]>
                <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->

        <div class="container">
            <div class="jumbotron">
                <h1>Unimon</h1>
                <p>Projeto GA de Redes de Computadores I - Unisinos 2014/1</p>

                <div class="row game-stage" id="stage-inputname">
                    <div class="col-md-6">
                        <h3>Nome do Jogador</h3>
                        <p>
                            <input type="text" placeholder="Informe seu nome" name="name">
                            <button data-action="input-name" type="button" class="btn btn-default">Entrar</button>
                        </p>
                    </div>
                </div>

                <div class="row game-stage" id="stage-listrooms">
                    <div class="col-md-6">
                        <h3>Campos de Batalha disponíveis</h3>
                        <p>
                        <form class="form-inline" action="/rooms">
                            <input type="text" placeholder="Digite o nome do novo campo de batalha" name="room-name">
                            <button data-action="new-room" type="button" class="btn btn-default">Criar</button>
                        </form>
                        </p>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nome</th>
                                    <th>Jogadores</th>
                                    <th width="1">
                                        <button data-action="refresh-rooms" type="button" class="btn btn-default btn-xs">Atualizar</button>
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="roomList">
                                <tr>
                                    <td colspan="3">Nenhum campo disponível</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="row game-stage" id="stage-room">
                    <h2>Sala: <span id="room-name"></span></h2>

                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-6">
                                <h4 id="player-1-name"></h4>
                                <b>HP:</b> <span>0</span>
                                <p>
                                    <button disabled data-action="attack" type="button" class="btn btn-primary btn-block">Attack</button>
                                </p>
                            </div>
                            <div class="col-md-6">
                                <h4 id="player-2-name"></h4>
                                <b>HP:</b> <span>0</span>
                                <p>
                                    <button disabled data-action="attack" type="button" class="btn btn-danger btn-block">Attack</button>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <h4>Combat Log</h4>
                        <pre class="well" id="log"></pre>
                    </div>
                </div>

            </div>
        </div>

        <!-- jQuery -->
        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="public/bower_components/jQuery/jquery.min.js"><\/script>')</script>

        <!-- socket.io -->
        <script src="/socket.io/socket.io.js"></script>

        <!-- APP CODE -->
        <script src="js/game.js"></script>
        <script src="js/app.js"></script>
    </body>
</html>
